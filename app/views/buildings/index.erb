<h1>All Buildings</h1>
<p><a href="/buildings/new">Submit a building</a></p>

<!-- create a search -->
<form  method="get" action="/buildings/index">
    <!--<label for="keywords">Search</label>-->
    <input type="search" name="keywords" id="keywords"/>
    <button type="submit">Search</button> 
</form> 

<hr>

<div class="buildings">
    <% @buildings.each_with_index do |building, i| %>
    
        <% if i%2 == 0 %> <section class="building row"><% end %>
        
            <div class="col-xs-2 col-md-1">
                <img class="img-responsive" src="<%= building.img_src %>" >
            </div>
            <div class="col-xs-10 col-md-5">
                <h3><a href="#"><%= building.name %></a></h3>
                <h4><%= building.city.name %></h4>
                <p>The <%= building.name %> was built in <%= readable_date(building.date_built) %> and clocks in at <%= building.height_m %>m.</p>
            </div>
            
        <% if i%2 == 1 || i == @buildings.length-1%></section><hr><% end %>
    <% end %>
</div>